@model IEnumerable<BTL.Models.SanPham>

@{
    ViewBag.Title = "sanPhamTheoHang";
    Layout = "~/Views/Share/_LayoutPage1.cshtml";
}
<div id="fh5co-single-content" class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <h2>Sản phẩm theo hãng</h2>

                @{
                    foreach (var item in Model)
                    {
                        <div class="row pb-4 product">

                            <div class="col-md-5">
                                <div class="fh5co_hover_news_img">
                                    <div class="fh5co_news_img"><img src="@Url.Content("~/images/" + item.MaSP + ".jpg")" alt="" /></div>
                                    <div></div>
                                </div>
                            </div>
                            <div class="col-md-7 animate-box mt-5">
                                <a href="@Url.Action("xemChiTiet","Home", new { @MaSP = item.MaSP })" class="fh5co_magna py-2">
                                    @item.TenSP
                                </a>
                                <br />
                                <a href="#" class="fh5co_mini_time py-3">
                                    Giá bán: @item.DonGiaNhap đồng
                                    <br />
                                </a>

                            </div>
                        </div>
                        }
                    }
                </div>
            @Html.Action("Tags", "Home")
        </div>
    </div>
</div>
@Html.Partial("SmallTrending")
